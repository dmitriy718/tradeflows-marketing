# Claude API Configuration
ANTHROPIC_API_KEY=your_api_key_here

# Server Configuration
PORT=3001
NODE_ENV=development

# Blog Configuration
BLOG_POSTS_PER_DAY_MIN=1
BLOG_POSTS_PER_DAY_MAX=3
BLOG_DATA_PATH=../src/data/blogPosts.js

# Feature Flags
ENABLE_AUTO_POSTING=true
ENABLE_KEYWORD_RESEARCH=true
ENABLE_IMAGE_GENERATION=true
ENABLE_SEO_OPTIMIZATION=true

# Scheduler Configuration
# Cron expressions for when to post (default: 9 AM, 2 PM, 7 PM)
POST_SCHEDULE_1=0 9 * * *
POST_SCHEDULE_2=0 14 * * *
POST_SCHEDULE_3=0 19 * * *
